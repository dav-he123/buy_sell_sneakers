<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <!-- External CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- App CSS -->
    <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <!-- <link rel="stylesheet" href="/styles/header.css" type="text/css" /> -->

    <!--JQuery--->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!--Event Handlers-->
    <script src="/scripts/favourites.js"></script>
    <script src="/scripts/load_event_handler.js"></script>
  </head>

  <body>
    <header>
      <%- include('partials/_header') %>
    </header>
    <main class="main">
      <section class="shoes-by-seller">
        <h4 class="sneakers-title">Shop Sneakers</h4>

        <h5 class="title-slogan">Do you have enough style?</h5>

        <div class="grid-layout">
          <% for(let sneaker of sneakers) { %>
          <div class="card">
            <div class="card-body" data-item="<%= sneaker.id %>">
              <h5 class="card-title favouriteData"><%= sneaker.title %></h5>
              <p class="card-text favouriteData">
                <%= sneaker.brand %> Apparel
              </p>
              <p class="card-text favouriteData">$ <%= sneaker.price %></p>

              <!-- class="card-text favouriteData" -->
              <img class="card-image" src="<%=sneaker.cover_photo_url %>" />

              <section id="fav-buy-section">
                <section id="fav-section-btn">
                  <span>
                    <button
                      href="/users/favourites"
                      class="fav-add-btn"
                      item_id="<%= sneaker.id %>"
                    >
                      Add to Favourties
                    </button>
                  </span>
                </section>
                <section id="send-message-section-btn">
                  <span>
                    <button class="sms-sendbtn">Buy Shoes</button>
                  </span>
                </section>
              </section>
            </div>

            <!-- <a href="#" class="btn btn-danger">Send Message</a> -->
          </div>
        </div>
        <% } %>
      </section>
    </main>
    <!-- <main id="showSneakers" class="container-in-center">
      <button class="sms-sendbtn">Send SMS</button>
    </main> -->
  </body>
</html>
