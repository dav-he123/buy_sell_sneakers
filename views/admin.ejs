<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <title>Sneakers - Admin Page</title>
    <!-- External CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  </head>
  <header>
    <%- include('partials/_header') %>
  </header>
  <body>
    <!-- Add a new Product -->
    <section class="new-product">
      <h4>Create a new product</h4>
      <form class="create-product" action="/new" method="POST">
        <div class="brand-group">
          <input
            type="text"
            class="form-control"
            id="brand"
            placeholder="Shoe's brand"
          />
        </div>
        <div class="title-group">
          <input
            type="text"
            class="form-control"
            id="title"
            placeholder="Title"
          />
        </div>
        <div class="size-group">
          <label for="size">Size</label>
          <select class="size-control" id="size">
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
            <option>12</option>
          </select>
        </div>
        <div class="price-group">
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="Price"
          />
        </div>
        <div class="description-group">
          <input
            type="text"
            class="form-control"
            id="description"
            placeholder="Description"
          />
        </div>
        <section class="button-create">
          <button type="submit" class="btn btn-primary">Create Product</button>
        </section>
      </form>
    </section>
    <!-- Existing Products -->
    <main class="main">
      <section class="shoes-by-seller">
        <h4>Existing Products</h4>
        <% for(let each of sneakers) { %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= each.title %></h5>
            <p class="card-text"><%= each.brand %></p>
            <p class="card-text"><%= each.price %></p>
            <a href="#" class="btn btn-success">Mark Sold</a>
            <a href="#" class="">Delete</a>
          </div>
        </div>
        <% } %>
      </section>
    </main>
  </body>
</html>
