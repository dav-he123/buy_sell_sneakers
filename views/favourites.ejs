<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <title>Favourite Sneakers</title>

    <!-- External CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- App CSS -->
    <!-- <link rel="stylesheet" href="/styles/layout.css" type="text/css" /> -->
    <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
    <link rel="stylesheet" href="/styles/favourites.css" type="text/css" />

    <!--JQuery--->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!--Event Handlers-->
    <script src="/scripts/favourites.js"></script>
    <script src="/scripts/load_event_handler.js"></script>
  </head>

  <body>
    <header>
      <%- include('partials/_header') %>
    </header>
    <main class="main">
      <section class="shoes-seller2">
        <h4 class="favourites-title">Favourites</h4>
        <div class="grid-layout-favourites">
          <% for(let sneaker of favouriteSneakers) { %>
          <div class="card-fav">
            <div class="card-body" data-item="<%= sneaker.id %>">
              <h5 class="card-title favouriteData"><%= sneaker.title%></h5>
              <p class="card-text favouriteData"><%= sneaker.brand%> Apparel</p>
              <p class="card-text favouriteData">$ <%= sneaker.price%></p>

              <img class="card-fav-image" src="<%=sneaker.cover_photo_url %>" />
            </div>
          </div>
          <% } %>
        </div>
      </section>
    </main>
  </body>
</html>
